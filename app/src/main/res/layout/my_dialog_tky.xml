                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/tv_bg"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="@dimen/textmydialogssmallSize" />
                </LinearLayout>


                <ImageButton
                    android:id="@+id/iv_scanicon"
