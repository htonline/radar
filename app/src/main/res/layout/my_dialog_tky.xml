                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/tv_bg"
                            android:src="@drawable/touch_show" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="0dp"
