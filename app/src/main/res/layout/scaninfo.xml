<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textTitleLargeSize"
            android:text="扫码信息"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"
                android:text="项目名称"/>
            <TextView
                android:gravity="center"
                android:id="@+id/scan_tv_dqbh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"
                android:text="检测内容"/>
            <TextView
                android:gravity="center"
                android:id="@+id/scan_tv_dqtype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"
                android:text="项目编号"/>
            <TextView
                android:gravity="center"
                android:id="@+id/scan_tv_dqheight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"
                android:text="检测日期"/>
            <TextView
                android:gravity="center"
                android:id="@+id/scan_tv_dqwidth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"
                android:text="检测标准"/>
            <TextView
                android:gravity="center"
                android:id="@+id/scan_tv_dqthk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textNormSize"
                android:background="@drawable/tv_bg"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <Button
            android:id="@+id/scan_btn_cancel"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"/>

    </LinearLayout>
</merge>